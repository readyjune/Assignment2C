<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Peer-to-Peer Client" Height="350" Width="500">
    <Grid>
        <TextBox Name="PythonCodeInput" Margin="10" Width="400" Height="100" VerticalScrollBarVisibility="Auto" />
        <Button Content="Register" Name="RegisterButton" Margin="10,120,0,0" VerticalAlignment="Top" Click="RegisterButton_Click" />
        <Button Content="Start Job" Name="StartJobButton" Margin="10,150,0,0" VerticalAlignment="Top" Click="StartJobButton_Click" />
        <Button Content="Refresh" Name="RefreshButton" Margin="10,180,0,0" VerticalAlignment="Top" Click="RefreshButton_Click" />
        
        <TextBlock Name="JobStatus" Margin="10,220,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
